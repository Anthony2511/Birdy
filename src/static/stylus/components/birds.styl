@media screen and (max-width: 320px)
  .birdy-map
    margin-bottom 100px
  .birds
    &__infos
      display flex
      flex-direction row-reverse
      justify-content space-between
      color $cDarkBlue
    &__bloc-info
      padding 15px
      border-radius 10px
      background-color $cLightGrey
      margin-bottom 30px
      font-family 'opensans'
    &__container
      margin-bottom 100px
    &__img
      width 100px
      height 50%
      margin-right 5px
    &__title
      font-weight: 600
      font-size 16px
      margin-bottom 5px
    &__champ
      display flex
      flex-direction column
      margin-bottom 15px
    &__text
      font-size 14px
    &__audio
      width 100%
    &__size
      display flex
      flex-direction row
      justify-content space-between
      margin-top 10px
      .birds
        &__title
          margin-right 5px
    &__latin
      margin-bottom 10px
      .birds
        &__title
          margin-bottom 5px
          display block
    &__description
      margin-bottom 10px
      .birds
        &__title
          margin-bottom 5px
          display flex
        &__text
          line-height 1.6