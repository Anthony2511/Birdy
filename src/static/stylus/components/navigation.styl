.active
  background-color $cGreen
.nav
  &__list
    background-color $cDarkGreen
    display flex
    flex-direction row
    justify-content space-between
    position fixed
    bottom 0
    width 100%
  &__item
    color $cWhite
    font-size s(12,16)
    font-family 'opensans'
  &__link
    padding s(10,12)
    display block
    &--carte
      &:before
        icon('map')
        display block
        font-size s(14,12)
        text-align center
        margin-bottom s(10,14)
    &--capture
      &:before
        icon('bird')
        display block
        font-size s(14,12)
        text-align center
        margin-bottom s(10,14)
    &--encyclopedie
      &:before
        icon('book')
        display block
        font-size s(14,12)
        text-align center
        margin-bottom s(10,14)
    &--users
      &:before
        icon('user')
        display block
        font-size s(14,12)
        text-align center
        margin-bottom s(10,14)


